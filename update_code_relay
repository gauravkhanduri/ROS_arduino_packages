#include <ros.h>
#include <std_msgs/Int8MultiArray.h>
#include <Servo.h>

#define relay_pin  A0
#define relay_pin1 A1
#define servo_pin 9

Servo servo;

ros::NodeHandle  nh;

void messageCb( const std_msgs::Int8MultiArray& relay_msg){
      int val[] = relay_msg.data;
      if(val[0] == 0){
        digitalWrite(relay_pin, LOW);
        }
       else if(val[1] == 0){
        digitalWrite(relay_pin1,LOW);
        }
       else if(val[0] == 1){
        digitalWrite(relay_pin,HIGH);
        }
       else if(val[1] == 1) {
          digitalWrite(relay_pin1,HIGH);
          }
        else if(val[2] ==0){
         servo.write(0);
        }
        else{
          servo.write(125);
          }
        
      }
    


ros::Subscriber<std_msgs::Int8MultiArray> sub("relay", messageCb);

void setup()
{ 
  pinMode(relay_pin, OUTPUT);
  pinMode(relay_pin1, OUTPUT);
  digitalWrite(relay_pin, HIGH);
  digitalWrite(relay_pin1, HIGH);
  servo.attach(servo_pin);
  servo.write(0);    //initially servo to zero  angular rotation
  
  nh.initNode();
  nh.subscribe(sub);
}

void loop()
{  
  nh.spinOnce();
  delay(100);
}
