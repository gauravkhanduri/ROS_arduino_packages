#include <ros.h>
#include <std_msgs/Int8.h>
#include <Servo.h>

#define relay_pin  A0
#define relay_pin1 A1
#define servo_pin 9

Servo servo;

ros::NodeHandle  nh;

void messageCb( const std_msgs::Int8& relay_msg){
      int val = relay_msg.data;
      if(val == 1){
        digitalWrite(relay_pin, LOW);
        }
      else if(val == 2){
        digitalWrite(relay_pin1,LOW);
        }
       else if(val == 3){
        digitalWrite(relay_pin,HIGH);
        }
        else if(val == 4) {
          digitalWrite(relay_pin1,HIGH);
          }
       else{
          servo.write(val);
        }
      }
    
void servo_cb(const std_msgs::Int8& relay_msg ){
    int val = relay_msg.data;
    if(val==0 || val == 180){
      servo.write(val);
      }
    else{
      servo.write(val);
      servo.detach();
      }
  
  }

ros::Subscriber<std_msgs::Int8> sub("relay", messageCb, servo_cb);

void setup()
{ 
  pinMode(relay_pin, OUTPUT);
  pinMode(relay_pin1, OUTPUT);
  digitalWrite(relay_pin, HIGH);
  digitalWrite(relay_pin1, HIGH);
  servo.attach(servo_pin);
  
  nh.initNode();
  nh.subscribe(sub);
}

void loop()
{  
  nh.spinOnce();
  delay(100);
}
